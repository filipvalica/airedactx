{
  "manifest_version": 3,
  "name": "AIRedactX Redaction Extension",
  "version": "1.3.0",
  "description": "Automatically redact sensitive information from text fields before submission.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "action": {
    "default_title": "AIRedactX - Click to open settings"
  },
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "airedactx@example.com"
    }
  }
}