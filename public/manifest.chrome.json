{
  "manifest_version": 3,
  "name": "AIRedactX Redaction Extension",
  "version": "1.3.0",
  "description": "Automatically redact sensitive information from text fields before submission.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "icons/icon-48.svg"
    }
  },
  "icons": {
    "48": "icons/icon-48.svg"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "injected-styles.css",
        "icons/icon-48.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "injected-styles.css"
      ],
      "all_frames": true
    }
  ]
}