{
  "manifest_version": 3,
  "name": "AIRedactX Redaction Extension",
  "version": "1.3.0",
  "description": "Automatically redact sensitive information from text fields before submission.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "airedactx@example.com"
    }
  },
  "options_ui": {
    "page": "index.html"
  },
  "homepage_url": "https://github.com/your-repo/airedactx"
}